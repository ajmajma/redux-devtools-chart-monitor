{
  "name": "redux-chart-monitor",
  "version": "0.0.0",
  "description": "Monitor for Redux dev tools to visualize your store as a chart",
  "main": "lib/ChartMonitor.js",
  "scripts": {
    "clean": "rimraf lib dist",
    "build": "babel src --out-dir lib",
    "build:umd": "webpack src/index.js dist/redux-chart-monitor.js && NODE_ENV=production webpack src/index.js dist/redux-chart-monitor.min.js",
    "lint": "eslint src",
    "prepublish": "npm run lint && npm run clean && npm run build && npm run build:umd"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/romseguy/redux-chart-monitor.git"
  },
  "keywords": [
    "redux",
    "monitor",
    "chart"
  ],
  "author": "romseguy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/romseguy/redux-chart-monitor/issues"
  },
  "homepage": "https://github.com/romseguy/redux-chart-monitor",
  "devDependencies": {
    "babel": "^5.5.8",
    "babel-core": "^5.6.18",
    "babel-eslint": "^3.1.15",
    "babel-loader": "^5.1.4",
    "eslint": "^0.23",
    "eslint-config-airbnb": "0.0.6",
    "eslint-plugin-react": "^2.3.0",
    "rimraf": "^2.3.4",
    "webpack": "^1.9.6"
  },
  "dependencies": {
    "d3-state-visualizer": "^0.4.4",
    "react": "^0.13.3",
    "redux": "^3.0.0",
    "redux-devtools": "^2.1.2"
  }
}
